<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_admin"
    tools:context=".user_home_pages.LibrarianHomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/hometxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Fine"
                android:textColor="#FFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hometxt"
                android:layout_marginTop="6dp"
                android:text="@string/admin"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/user" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="623dp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/activity_horizontal_margin2"
            android:layout_weight=".75"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="116dp"
                android:layout_marginBottom="8dp"
                android:text="Enter Member ID and Fine Amount"
                android:textColor="@color/textWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/issue_fine_member_id_admin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />


            <EditText
                android:id="@+id/issue_fine_member_id_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/textWhite"
                android:drawableStart="@drawable/ic_user_white_24dp"
                android:drawablePadding="15dp"
                android:hint="Member ID"
                android:inputType="number"
                android:paddingBottom="16dp"
                android:textColor="@color/textWhite"
                android:textColorHint="@color/textWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="167dp" />

            <EditText
                android:id="@+id/issue_fine_amount_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/textWhite"
                android:drawableStart="@drawable/ic_money_white_24dp"
                android:drawablePadding="15dp"
                android:hint="Fine Amount"
                android:inputType="number"
                android:paddingBottom="16dp"
                android:textColor="@color/textWhite"
                android:textColorHint="@color/textWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="316dp" />

            <Button
                android:id="@+id/issue_fine_admin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_corner"
                android:onClick="issueFineOnClickAdmin"
                android:text="Issue Fine"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="483dp" />


        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</ScrollView>