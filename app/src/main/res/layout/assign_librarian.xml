<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_admin"
    tools:context=".pages.AssignLibrarianPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/hometxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign Librarian"
                android:textColor="#FFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hometxt"
                android:layout_marginTop="6dp"
                android:text="@string/admin"
                android:textColor="#FFFF"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/user" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="623dp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/activity_horizontal_margin2"
            android:layout_weight=".75"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin2"
                android:text="Enter Member ID below to assign"
                android:textColor="@color/textWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/assign_librarian_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/textWhite"
                android:drawableStart="@drawable/ic_user_white_24dp"
                android:drawablePadding="15dp"
                android:hint="Member ID"
                android:inputType="number"
                android:paddingBottom="16dp"
                android:textColor="@color/textWhite"
                android:textColorHint="@color/textWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.293"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/assign_librarian_button"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_margin="24dp"
                android:background="@drawable/btn_corner"
                android:onClick="assignLibrarianOnClick"
                android:text="Assign Librarian"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.801"
                tools:ignore="MissingConstraints" />


        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</ScrollView>